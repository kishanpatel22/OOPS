% To support svg
\usepackage{graphicx}
% Include svg images rendered via inkscape
% Check if inkscape needs to be run again
\newcommand{\executefortarget}[3]{%
  \IfFileExists{#1}{%
    \ifnum\pdfstrcmp{\pdffilemoddate{#2}}%
    {\pdffilemoddate{#1}}>0%
    {\immediate\write18{#3}}\fi%
  }{%
    \immediate\write18{#3}%
  }%
}
\newcommand{\includesvg}[1]{%
  \executefortarget{#1.pdf}{#1.svg}%
  {inkscape -z -D --file=#1.svg --export-pdf=#1.pdf --export-latex}%
  \input{#1.pdf_tex}%
}

